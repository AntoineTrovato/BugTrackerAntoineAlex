@model IEnumerable<BugTracker.Models.Ticket>

@{
    ViewBag.Title = "NotResolved";
}

<h2>Tickets Non-résolus</h2>



<p class="btn btn-inverse" style="float: left; margin-right: 20px; margin-bottom: 20px;">
    @Html.ActionLink("Créer nouveau ticket", "Create")
</p>
<p class="btn btn-inverse">
    @Html.ActionLink("Voir tous les tickets", "")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Sujet)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Application)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Statut)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Importance)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Sujet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Application)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Statut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Importance)
            </td>
            <td>
                @Html.ActionLink("Editer", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Détails", "Details", new { id = item.ID }) |
                @Html.ActionLink("Supprimer", "Delete", new { id = item.ID }) |
            </td>
        </tr>
    }

</table>
